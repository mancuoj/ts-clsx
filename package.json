{
  "name": "ts-clsx",
  "type": "module",
  "version": "2.4.1",
  "packageManager": "pnpm@8.15.7",
  "description": "Rewrite clsx in TypeScript.",
  "author": "Mancuoj <mancuoj@gmail.com>",
  "license": "MIT",
  "repository": "mancuoj/ts-clsx",
  "keywords": [
    "ts",
    "clsx",
    "classnames",
    "react",
    "typescript",
    "utility",
    "tailwindcss",
    "css"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.ts",
        "default": "./dist/es/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./lite": {
      "import": {
        "types": "./dist/es/lite.d.ts",
        "default": "./dist/es/lite.js"
      },
      "require": {
        "types": "./dist/cjs/lite.d.cts",
        "default": "./dist/cjs/lite.cjs"
      }
    }
  },
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunchee",
    "dev": "bunchee -w",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "pnpm vitest --coverage --typecheck",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && pnpm publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.13.3",
    "@types/node": "^20.12.7",
    "@vitest/coverage-v8": "^1.5.0",
    "bumpp": "^9.4.0",
    "bunchee": "^5.1.2",
    "eslint": "^9.0.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
