{
  "name": "ts-clsx",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@8.15.4",
  "description": "Rewrite clsx in TypeScript",
  "author": {
    "name": "mancuoj",
    "url": "https://github.com/mancuoj"
  },
  "license": "MIT",
  "homepage": "https://github.com/mancuoj/ts-clsx#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mancuoj/ts-clsx.git"
  },
  "bugs": "https://github.com/mancuoj/ts-clsx/issues",
  "keywords": [
    "ts",
    "clsx",
    "classnames",
    "react",
    "typescript",
    "utility",
    "tailwindcss",
    "css"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./lite": {
      "import": {
        "types": "./dist/lite/index.d.ts",
        "default": "./dist/lite/index.js"
      },
      "require": {
        "types": "./dist/lite/index.d.cts",
        "default": "./dist/lite/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunchee",
    "dev": "bunchee -w",
    "start": "esno src/index.ts",
    "lint": "eslint . && tsc",
    "test": "vitest",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && pnpm publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.8.0",
    "@types/node": "^20.11.25",
    "bumpp": "^9.4.0",
    "bunchee": "^4.4.8",
    "eslint": "^8.57.0",
    "esno": "^4.7.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
